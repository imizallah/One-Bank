<% include ../partials/default/nav %> 
<% include ../partials/default/messages %>
  

  <div class="container">
    <div class="row mt-5">
      <div class="col-md-6">
        <h2>User Login</h2>
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="actnmbr">Email Address:</label>
            <input
              type="text"
              class="form-control"
              id="actnmbr"
              name="email"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="actnmbr">Password:</label>
            <input
              type="password"
              class="form-control"
              id="actnmbr"
              name="password"
              required
            />
          </div>
  
          <button class="btn btn-success" type="submit">Login</button>
          <a class="btn btn-primary" href="/">Register</a>
          <a class="btn btn-danger" href="/">Go Back Home</a>


        </form>
      </div>
    </div>
  </div>

